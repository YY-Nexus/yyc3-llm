{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "components/ui/**/*",
    "components/templates/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "components/ui/icons.tsx",
    "components/ui/monaco-editor.tsx"
  ]
}
